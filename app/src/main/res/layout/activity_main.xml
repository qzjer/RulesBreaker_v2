<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rules_breaker"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:background="@color/black" />

    <com.spark.submitbutton.SubmitButton
        android:id="@+id/begin1"
        android:layout_width="381dp"
        android:layout_height="115dp"
        android:layout_alignTop="@+id/viewPager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:text="@string/pair_and_order"
        android:textColor="@color/white"
        app:sub_btn_background="@color/black"
        app:sub_btn_duration="1500"
        app:sub_btn_line_color="@color/proswipebtn_red"
        app:sub_btn_ripple_color="@color/white" />




</RelativeLayout>